{
    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "moduleResolution": "nodenext",
        "rootDir": ".",
        "outDir": "build",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "strict": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
